{
  "editor.tabSize": 2,
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 16,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.wordWrap": "on",
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 16,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.associations": {
    "*.html": "html"
  },
  "files.hotExit": "onExit",
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1,
  "window.newWindowProfile": "Default",
  "workbench.colorTheme": "Default Light+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.experimental.enableNewProfilesUI": true,
  "cSpell.language": "en,de,de-AT,en-GB,en-US",
  "markdown.extension.italic.indicator": "_",
  "markdown-pdf.plantumlOpenMarker": "```plantuml",
  "markdown-pdf.plantumlCloseMarker": "```",
  "markdown-pdf.plantumlServer": "https://mode.fh-joanneum.at/-/plantuml",
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.config/vim/vimrc",
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordBasedSuggestions": "off"
  },
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.project.importHint": false,
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "prettier.singleQuote": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "prettier.singleQuote": true
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false,
    "cSpell.fixSpellingWithRenameProvider": true,
    "cSpell.advanced.feature.useReferenceProviderWithRename": true,
    "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
  },
  "tinymist.formatterMode": "typstyle",
  "[typst]": {
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnSave": true,
    "editor.suggest.selectionMode": "whenQuickSuggestion"
  }
}
